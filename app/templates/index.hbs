{{ui-topbar}}

<div class="Content">
  <div class="Grid Grid--centered">
    <div class="Grid-cell Grid-cell--10 Grid-cell--4@tablet">
      <h2>Welcome!</h2>
      <label class="Label Label--block">
        Your name
        <div class="InputGroup">
          {{input type="text" value=username autocomplete="off" class="Input u-mgt--xs" keyUp=(action 'onKeyUp') placeholder="Enter your name"}}
          <button type="button" class="Btn Btn--validate u-mgt--xs" {{action "onSaveUsername"}}>
            Start
          </button>
        </div>
        <p class={{unless isInvalid "is-hidden"}}>Username should be greater than 2 characters.</p>
      </label>
    </div>
  </div>
</div>
