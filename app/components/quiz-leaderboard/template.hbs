<div class="Content">
  <div class="Grid Grid--centered">
    <div class="Grid-cell Grid-cell--10 Grid-cell--6@tablet">
      <header class="Leaderboard-header">
        <h2>Leaderboard</h2>
        <div class="Tabs u-mgv--m">
          {{#link-to "quiz" title="Retry" class="Tab"}}Play again{{/link-to}}
          <span class="Tab" title="Save" tabindex="1" {{action "onSaveToServer"}}>{{saveLabel}}</span>
          <span class="Tab" title="Reset" tabindex="2" {{action (route-action "onResetLeaderboard")}}>Reset</span>
        </div>
      </header>
      <div class="List">
        <header class="List-header">
          <h4 class="List-title">Name</h4>
          <strong>Score</strong>
        </header>
        <ul data-name="score_list" class="List-content">
          {{#each scores as |item|}}
            <li data-name="score_entry" class="List-item">
              <strong data-name="score" class="u-push">{{item.score}}</strong>
              <span data-name="name">{{item.name}}</span>
            </li>
          {{/each}}
          {{#unless scores.length}}
            <li data-name="score_empty" class="List-item">
              No points scored yet
            </li>
          {{/unless}}
        </ul>
      </div>
    </div>
  </div>
</div>
